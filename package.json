{
  "name": "planning-poker-serverless",
  "version": "1.0.0",
  "description": "Serverless Planning Poker voting application",
  "main": "serverless/local-server.js",
  "scripts": {
    "dev": "concurrently \"node serverless/local-server.js\" \"cd client && npm run dev\"",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "serverless:dev": "node serverless/local-server.js",
    "offline": "serverless offline start --host 0.0.0.0 --httpPort 3001",
    "build": "cd client && npm run build",
    "start": "node serverless/local-server.js",
    "deploy": "serverless deploy --stage prod",
    "deploy:dev": "serverless deploy --stage dev",
    "remove": "serverless remove",
    "logs": "serverless logs -f joinSession --tail",
    "test": "jest --testPathPattern=\"tests/unit|server/tests\"",
    "test:unit": "jest --testPathPattern=\"tests/unit|server/tests\" --coverage",
    "test:integration": "jest --testPathPattern=\"tests/integration\" --testTimeout=15000",
    "test:cost": "jest --testPathPattern=\"tests/cost-optimization\" --testTimeout=15000",
    "test:e2e": "jest --testPathPattern=\"tests/e2e\" --testTimeout=45000",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:cost",
    "test:watch": "jest --watch --testPathPattern=\"tests/unit|server/tests\"",
    "test:debug": "DEBUG=true jest --testPathPattern=\"tests/unit|server/tests\" --verbose",
    "cost:monitor": "aws ce get-cost-and-usage --time-period Start=$(date -d '1 month ago' +%Y-%m-01),End=$(date +%Y-%m-%d) --granularity MONTHLY --metrics BlendedCost",
    "cost:alarm": "aws cloudwatch put-metric-alarm --alarm-name PlanningPokerCost --alarm-description 'Alert when costs exceed $5' --metric-name EstimatedCharges --namespace AWS/Billing --statistic Maximum --period 86400 --threshold 5 --comparison-operator GreaterThanThreshold --evaluation-periods 1 --dimensions Name=Currency,Value=USD",
    "serverless:deploy": "serverless deploy",
    "serverless:remove": "serverless remove",
    "deploy:build": "npm run build && npm run serverless:deploy"
  },
  "keywords": [
    "serverless",
    "planning-poker",
    "aws",
    "lambda",
    "dynamodb",
    "socket.io"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "puppeteer": "^24.22.0",
    "serverless": "^3.38.0",
    "serverless-domain-manager": "^7.4.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^13.9.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "serverless": "^3.0.0",
    "socket.io": "^4.7.5",
    "update": "^0.7.4"
  }
}
