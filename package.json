{
  "name": "planning-poker",
  "version": "1.0.0",
  "description": "Agile Planning Poker voting application with comprehensive testing",
  "main": "server/src/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "build": "npm run client:build",
    "start": "cd server && npm start",
    
    "test": "jest",
    "test:unit": "jest --testPathPattern=\"tests/unit|server/tests\" --coverage",
    "test:integration": "jest --testPathPattern=\"tests/integration\" --runInBand --forceExit",
    "test:e2e": "jest --testPathPattern=\"tests/e2e\" --runInBand --forceExit --detectOpenHandles",
    "test:cost": "jest --testPathPattern=\"tests/cost-optimization\" --verbose",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:cost",
    "test:watch": "jest --watch --testPathPattern=\"tests/unit\"",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    
    "test:smoke": "jest --testPathPattern=\"tests/e2e/smoke\" --runInBand",
    "test:performance": "jest --testPathPattern=\"tests/performance\" --runInBand",
    "test:accessibility": "jest --testPathPattern=\"tests/accessibility\" --runInBand",
    
    "lint": "eslint server/src/**/*.js client/src/**/*.js tests/**/*.js",
    "lint:fix": "eslint server/src/**/*.js client/src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    
    "deploy:build": "npm run build && npm run deploy:aws",
    "deploy:aws": "cd deployment && ./deploy.sh",
    "deploy:staging": "cd deployment && ./deploy.sh staging",
    "deploy:production": "cd deployment && ./deploy.sh production",
    
    "security:audit": "npm audit && cd server && npm audit && cd ../client && npm audit",
    "security:fix": "npm audit fix && cd server && npm audit fix && cd ../client && npm audit fix",
    
    "clean": "rm -rf node_modules server/node_modules client/node_modules coverage dist build",
    "clean:coverage": "rm -rf coverage",
    "clean:build": "rm -rf client/dist server/dist",
    
    "setup": "npm install && cd server && npm install && cd ../client && npm install",
    "postinstall": "husky install || true"
  },
  "keywords": [
    "agile", 
    "planning-poker", 
    "voting", 
    "scrum", 
    "estimation", 
    "websocket", 
    "real-time"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.6.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.0",
    "husky": "^8.0.3",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "lint-staged": "^13.2.0",
    "prettier": "^3.0.0",
    "puppeteer": "^21.0.0",
    "socket.io-client": "^4.7.0",
    "supertest": "^6.3.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "server/src/**/*.js",
      "client/src/**/*.js",
      "!server/src/index.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "projects": [
      {
        "displayName": "unit",
        "testMatch": [
          "<rootDir>/tests/unit/**/*.test.js",
          "<rootDir>/server/tests/**/*.test.js"
        ]
      },
      {
        "displayName": "integration", 
        "testMatch": ["<rootDir>/tests/integration/**/*.test.js"]
      },
      {
        "displayName": "e2e",
        "testMatch": ["<rootDir>/tests/e2e/**/*.test.js"]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/planning-poker.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/planning-poker/issues"
  },
  "homepage": "https://team2playscards.com"
}
